{
  "name": "bank-fe",
  "private": true,
  "description": "Hobby application for expense tracking and simulations",
  "license": "UNLICENSED",
  "author": {
    "name": "Ricardo Costa"
  },
  "repository": "github:ricardocosta/bank-fe",
  "bugs": {
    "url": "https://github.com/ricardocosta/bank-fe/issues"
  },
  "engines": {
    "node": "22"
  },
  "packageManager": "pnpm@9.0.2",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#*": "./*"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:icons": "tsx ./other/build-icons.ts",
    "build:remix": "remix vite:build --sourcemapClient",
    "build:server": "tsx ./other/build-server.ts",
    "predev": "pnpm run build:icons --silent",
    "dev": "run-p dev:*",
    "dev:app": "node ./server/dev-server.js",
    "prisma:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "prisma db seed",
    "format": "prettier --write .",
    "format:ci": "prettier --check . --log-level warn",
    "lint": "eslint .",
    "setup": "pnpm run build && prisma generate && prisma migrate deploy && prisma db seed && playwright install",
    "start": "cross-env NODE_ENV=production node .",
    "start:mocks": "cross-env NODE_ENV=production MOCKS=true tsx .",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "coverage": "vitest run --coverage.enabled --coverage.reporter='text'",
    "test:e2e": "pnpm run test:e2e:dev",
    "test:e2e:dev": "playwright test --ui",
    "pretest:e2e:run": "pnpm run build",
    "test:e2e:run": "cross-env CI=true playwright test",
    "test:e2e:install": "pnpx playwright install --with-deps chromium",
    "typecheck": "tsc",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "pre-commit": "lint-staged",
    "commitlint": "commitlint --edit",
    "commitlint:ci": "commitlint"
  },
  "dependencies": {
